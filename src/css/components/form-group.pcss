@layer components {
  .form-group {
    @apply mb-5 text-secondary;
    label {
      @apply block mb-1.5 font-medium;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
      @apply py-2 px-4 border-gray-300 rounded-md w-full outline-none border focus:ring-1 focus-within:ring-secondary;
    }
  }
}
